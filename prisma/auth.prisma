model User {
    id                       Int                       @id @default(autoincrement())
    email                    String                    @unique
    emailConfirmationRequest EmailConfirmationRequest?
}

model EmailConfirmationRequest {
    id        Int      @id @default(autoincrement())
    token     String   @unique
    expiresAt DateTime

    user   User @relation(fields: [userId], references: [id])
    userId Int  @unique
}

