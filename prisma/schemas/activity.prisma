import { User } from "./auth"


model Activity {
    id        Int          @id @default(autoincrement())
    createdAt DateTime     @default(now())
    user      User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
    userId    Int?
    type      ActivityType
    metadata  Json
}

enum ActivityType {
    BOOK_ADDED
    BOOK_UPDATED
    BOOK_DELETED
    BOOK_BORROWED
    USER_CREATED
    USER_UPDATED
    USER_DELETED
    READING_STATE_UPDATED
}
