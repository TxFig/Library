model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    username String @unique

    emailConfirmationRequest EmailConfirmationRequest?
    Session                  Session[]
}

model EmailConfirmationRequest {
    id        Int      @id @default(autoincrement())
    token     String   @unique
    expireDate DateTime

    user   User @relation(fields: [userId], references: [id])
    userId Int  @unique
}

model Session {
    id    Int    @id @default(autoincrement())
    token String @unique
    expireDate DateTime

    userId Int
    user   User @relation(fields: [userId], references: [id])
}
