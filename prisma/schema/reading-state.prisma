model UserBookReadingState {
    userId Int
    user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
    editionId Int
    edition   BookEdition @relation(fields: [editionId], references: [id])

    state ReadingState

    @@id([userId, editionId])
}

enum ReadingState {
    NOT_READ
    READING
    READ
    WANT_TO_READ
}
